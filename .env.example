# Telegram Bot
TELEGRAM_BOT_TOKEN=your_bot_token_from_botfather

# Yookassa (ЮKassa)
YOOKASSA_SHOP_ID=your_shop_id
YOOKASSA_SECRET_KEY=your_secret_key

# Webhook URL - должен быть доступен из интернета (ngrok для разработки)
WEBHOOK_BASE_URL=https://your-domain.com

# Пробный период: 0 = выключен, N = количество дней (например 3)
TRIAL_DAYS=0
# Лимит трафика для пробного периода (ГБ), 0 = безлимит
TRIAL_DATA_LIMIT_GB=0

# Реферальная программа: дни к подписке за каждого приглашённого, оплатившего тариф
REFERRAL_DAYS=0

# Удалять ключи, истёкшие более N дней назад (0 = отключено)
EXPIRED_CLEANUP_DAYS=7

# Remnawave Panel
REMNAWAVE_API_URL=https://panel.your-domain.com
REMNAWAVE_USERNAME=admin
REMNAWAVE_PASSWORD=your_password
# UUID группы подписок (Internal Squad) - из панели Remnawave -> Internal Squads
REMNAWAVE_SQUAD_UUID=xxxxxxxx-xxxx-xxxx-xxxx-xxxxxxxxxxxx
# URL страницы подписок для пользователей (Subscription Page)
REMNAWAVE_SUBSCRIPTION_URL=https://sub.your-domain.com

# Режим: bot - только бот, webhook - бот + webhook для оплаты
MODE=webhook
