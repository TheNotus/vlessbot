# Telegram Bot
TELEGRAM_BOT_TOKEN=your_bot_token_from_botfather
# ID администраторов через запятую (для команды /stats)
ADMIN_IDS=

# Принудительная подписка на канал (true/false — вкл/выкл)
FORCED_CHANNEL_ENABLED=false
# ID канала (например -1001234567890)
FORCED_CHANNEL_ID=
# Username канала для ссылки (например @mychannel)
FORCED_CHANNEL_USERNAME=

# Админ-панель бота (только через SSH-туннель). Если Remnawave на 8080 — используйте порт 8082
ADMIN_PANEL_ENABLED=false
ADMIN_PANEL_PORT=8080
ADMIN_PANEL_PASSWORD=

# Yookassa (ЮKassa)
YOOKASSA_SHOP_ID=your_shop_id
YOOKASSA_SECRET_KEY=your_secret_key

# Webhook URL (nginx), HTTPS обязательно. При установке задаётся автоматически,
# если указать: WEBHOOK_DOMAIN=bot.your-domain.com
WEBHOOK_BASE_URL=https://bot.your-domain.com
# Host и порт webhook сервера
WEBHOOK_HOST=0.0.0.0
WEBHOOK_PORT=8000

# Пробный период: 0 = выключен, N = количество дней
TRIAL_DAYS=0
TRIAL_DATA_LIMIT_GB=0

# Реферальная программа: дни за каждого приглашённого
REFERRAL_DAYS=0

# Удалять ключи, истёкшие более N дней назад (0 = отключено)
EXPIRED_CLEANUP_DAYS=7

# Remnawave Panel (бот и панель на одном сервере — API по localhost)
REMNAWAVE_API_URL=http://127.0.0.1:8080
REMNAWAVE_USERNAME=admin
REMNAWAVE_PASSWORD=your_password
REMNAWAVE_SQUAD_UUID=xxxxxxxx-xxxx-xxxx-xxxx-xxxxxxxxxxxx
# URL страницы подписок — домен для ссылок пользователям
REMNAWAVE_SUBSCRIPTION_URL=https://sub.your-domain.com
# REMNAWAVE_API_TOKEN — для Subscription Page (иначе 502). Добавить в /opt/remnawave/.env:
# Панель → Settings → API Tokens → создать → REMNAWAVE_API_TOKEN=токен
